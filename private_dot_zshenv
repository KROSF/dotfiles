# Define Zim location
: ${ZIM_HOME=${ZDOTDIR:-${HOME}}/.zim}


export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export EDITOR="micro"
export LANG=en_US.UTF-8

# Android
export ANDROID_SDK_ROOT="$HOME/Library/Android/sdk"
export ANDROID_EMULATOR="$ANDROID_SDK_ROOT/emulator"
export ANDROID_PLATFORM_TOOLS="$ANDROID_SDK_ROOT/platform-tools"

# Ruby
export RUBY_PATH="/usr/local/opt/ruby/bin"

# Git

export GIT_SCRIPTS="$HOME/.gitscripts"

# Misc
export PROJECT_ROOT="$HOME/Development"

export BW_SESSION=`chezmoi secret keyring get --service=bitwarden --user=krosf`

path=(
  $path
  $ANDROID_SDK_ROOT
  $ANDROID_EMULATOR
  $ANDROID_PLATFORM_TOOLS
  $RUBY_PATH
  $GIT_SCRIPTS
)
